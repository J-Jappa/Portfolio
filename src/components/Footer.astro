---
import { SITE } from "@/config";
const year = new Date().getFullYear();
---

<footer class="border-t mt-16">
  <div class="mx-auto max-w-app px-4 py-8 sm:px-4">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
      <!-- Left: site title + motto -->
      <div class="space-y-1">
        <p class="m-0 text-sm font-semibold">{SITE.title} Â· {year}</p>
        <p class="m-0 text-sm opacity-70 tracking-wide">always be optimising</p>
      </div>

      <!-- Right: links -->
      <nav class="text-sm flex gap-4 opacity-80" aria-label="Footer">
        <a href="/" class="hover:underline">Projects</a>
        <a href="/about" class="hover:underline">About</a>
        <a href="/experience" class="hover:underline">Experience</a>
        {SITE.linkedinUrl && (
          <a href={SITE.linkedinUrl} target="_blank" rel="noopener" class="hover:underline">
            LinkedIn
          </a>
        )}
      </nav>
    </div>
  </div>
</footer>
