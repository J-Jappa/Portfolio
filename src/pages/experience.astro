---
import Layout from "../layouts/Layout.astro";

const roles = [
  {
    title: "Aerodynamics & Structures — ANU Solar Racing",
    period: "Mar 2022 – Present",
    bullets: [
      "Shaped low-drag catamaran body; improved crosswind stability (±20° yaw).",
      "Foam seals & linkage tolerances; reduced CdA vs prior iteration.",
      "Composite layup decisions; manufacturing constraints and quality control.",
    ],
    tags: ["Aero", "Composites", "CFD"],
  },
  {
    title: "Early Bushfire Detection (GMM-VAE) — Honours Project",
    period: "2025",
    bullets: [
      "Built GRU/GMM-VAE on eCO₂/TVOC; experiment-level decision rule.",
      "Logged per-experiment detection times; precision/recall analysis.",
      "Prepared pipeline for on-device inference on MCU-class hardware.",
    ],
    tags: ["ML", "Anomaly Detection", "IoT"],
  },
];
const cvHref = "/JasperJapp_CV.pdf"; // place your PDF in /public
---

<Layout title="Experience" description="Experience and CV">
  <section class="mb-6">
    <h1 class="text-2xl font-semibold">Experience</h1>
    <p class="opacity-80">
      A more formal overview of selected roles & projects.
    </p>
    <p class="mt-2"><a href={cvHref} class="underline">Download CV (PDF)</a></p>
  </section>

  <div class="space-y-6">
    {
      roles.map(r => (
        <article class="rounded-2xl border p-5">
          <header class="flex items-baseline justify-between gap-4">
            <h2 class="text-lg font-semibold">{r.title}</h2>
            <span class="text-sm opacity-70">{r.period}</span>
          </header>
          <ul class="mt-3 ml-6 list-disc">
            {r.bullets.map(b => (
              <li>{b}</li>
            ))}
          </ul>
          {r.tags?.length ? (
            <div class="mt-3 text-xs opacity-70">{r.tags.join(" · ")}</div>
          ) : null}
        </article>
      ))
    }
  </div>
</Layout>
